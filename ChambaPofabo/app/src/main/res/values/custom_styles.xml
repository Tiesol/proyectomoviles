<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Circular">
        <item name="cornerSize">50%</item>
    </style>

    <style name="RoundedSquare">
        <item name="cornerSize">10%</item>
    </style>

    <style name="CornerCut">
        <item name="cornerSize">15dp</item>
        <item name="cornerFamily">cut</item>
    </style>

    <style name="DiamondCut">
        <item name="cornerSize">75dp</item>
        <item name="cornerFamily">cut</item>
    </style>

    <style name="SpecificCornerCut">
        <item name="cornerSizeTopRight">75dp</item>
        <item name="cornerFamilyTopRight">cut</item>
        <item name="cornerSizeBottomLeft">75dp</item>
        <item name="cornerFamilyBottomLeft">cut</item>
    </style>

    <style name="SpecificCornerRounded">
        <item name="cornerSizeTopRight">75dp</item>
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerSizeBottomLeft">75dp</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
    </style>
    <!-- Estilos para los selectores de fecha y hora -->
    <style name="MaterialDatePickerTheme" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="colorPrimary">#1F88DA</item>
        <item name="colorAccent">#1F88DA</item>
        <item name="colorOnPrimary">#E0F2F7</item>
        <item name="buttonBarPositiveButtonStyle">@style/DateTimeButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/DateTimeButtonStyle</item>
    </style>

    <style name="MaterialTimePickerTheme" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="colorPrimary">#1F88DA</item>
        <item name="colorAccent">#1F88DA</item>
        <item name="colorOnPrimary">#E0F2F7</item>
        <item name="android:colorControlNormal">#8ABCD7</item>
        <item name="android:colorControlActivated">#1F88DA</item>
        <item name="android:textColorPrimary">#E0F2F7</item>
        <item name="android:textColorSecondary">#8ABCD7</item>
        <item name="android:windowBackground">#273A48</item>
        <item name="buttonBarPositiveButtonStyle">@style/DateTimeButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/DateTimeButtonStyle</item>
    </style>

    <style name="DateTimeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#1F88DA</item>
    </style>
</resources>